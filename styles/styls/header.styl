header
    display: flex
    padding 15px 30px
    border-bottom: 2px solid var(--bgInner)
    justify-content: space-between
    align-items: center;
    font-weight: 500
    letter-spacing: .2px
    color: var(--texto)
    h2
        color: var(--verde)
        font-size: 18px
        font-weight: 600
        letter-spacing: .2px
        margin: 0
    >div
        display: flex
        align-items: center
        gap: 106px
    .customer
        display: flex
        align-items: center
        gap: 20px
    .darkmode
        display: flex
        align-items: center
        gap: 13px
    .exit
        cursor pointer
        display: flex
        align-items: center
        gap: 13px