.sombra
    position: fixed
    top: 0
    width: 100%
    height: 100%
    background: #0006
    display: flex
    align-items: center
    justify-content: center

.aviso
    max-width: 100%
    padding: 15px 
    width: 350px
    background: var(--bg)
    text-align: center
    border-radius: 10px

    &__preview
        margin-bottom: 20px
        max-width: 100%
        position: relative
        height: 200px

    &__msg
        color: var(--texto)
        font-size: 16px
        font-weight: 500
        margin-bottom: 20px

    &__actions
        display: flex
        justify-content: center
        align-items: center
        gap: 20px

    button
        font-size: 16px
        font-weight: 700
        letter-spacing: .2px
        border: 0
        border-radius: 5px
        text-transform: uppercase
        cursor pointer
        box-shadow: var(--shadow)
        
    &__ok
        width: 160px
        height 50px
        color: #000
        background: var(--verdeAuaha)
        &:hover
            box-shadow: 0 0 15px var(--verdeAuaha)

    &__cancel
        width: 160px
        height 50px
        color: #000
        background: var(--verdeAuaha)
        &:hover
            box-shadow: 0 0 15px var(--verdeAuaha)

    &__confirm
        width: 160px
        height 50px
        color: #fff
        background: var(--vermelho)
        &:hover
            box-shadow: 0 0 15px var(--vermelho)