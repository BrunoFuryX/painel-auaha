.listagem
    padding: 25px 30px 30px
    &__container
        display: flex
        flex-direction: column
        gap: 20px
        padding: 25px 20px 17px
        border-radius: 10px
        background: var(--bgInner)
        box-shadow: 0 2px 10px #0002
    
    &__list
        &-header
            display: none
            
            @media (max-width 991px)
                display: block
                padding-top: 20px
                padding-bottom: 20px
                font-size: 18px;
                font-weight: 600;
                letter-spacing: .2px;
                line-height: 20px;
                color: var(--verde);
                text-align: center
        &-body
            .topo
                padding: 15px
                display: flex
                justify-content: space-between
                font-size: 14px
                color: var(--texto)
                font-weight: 700
                letter-spacing: .2px
                margin: 0 10px 0 0;
                @media (max-width 991px)
                    display: none
                >div
                    overflow: hidden
                    &.id
                        width: 13%
                    &.acoes
                        width: 7%
                    
                    &.nome
                        width: 24%
                    &.email
                        width: 24%
                    &.loja
                        width: 12%
                    &.nivel
                        width: 20%

                    &.name
                        width: 10%
                    &.responsavel
                        width: 10%
                    &.url
                        width: 20%
                    &.contato
                        width: 10%
                    &.plataforma
                        width: 10%

                    &.productId
                        width: 18%
                    &.image1
                        width: 15%
                    &.image2
                        width: 15%
                    
                    &.tipo
                        width: 24%
                    &.arquivo
                        width: 24%
                    &.loja
                        width: 12%
                    &.data
                        width: 20%

                    &.usuario
                        width: 15%
                    &.info
                        width: 40%


                    &.title
                        width: 50%


            .corpo
                
                @media (max-width 991px)
                    display: flex
                    flex-direction: column
                    gap: 20px
                .item
                    display: flex
                    justify-content: space-between 
                    font-size: 13px
                    color: var(--texto)
                    font-weight: 500
                    letter-spacing: .2px
                    padding: 0 15px
                    @media (max-width 991px)
                        flex-direction: column
                    >div
                        white-space: nowrap;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        height: 44px
                        display: flex
                        align-items: center
                        box-sizing: border-box
                        padding: 0 10px 0 0 
                        a
                            color: var(--verde)
                            font-size: 13px
                            font-weight: 500
                            letter-spacing: .2px
                        @media (max-width 991px)
                            width: 100% !important
                        
                        &.id
                            width: 13%
                        &.acoes
                            width: 7%
                        
                        &.nome
                            width: 24%
                        &.email
                            width: 24%
                        &.loja
                            width: 12%
                        &.nivel
                            width: 20%

                        &.name
                            width: 10%
                        &.responsavel
                            width: 10%
                        &.url
                            width: 20%
                        &.contato
                            width: 10%
                        &.plataforma
                            width: 10%

                        &.productId
                            width: 18%
                        &.image1
                            width: 15%
                        &.image2
                            width: 15%

                        &.tipo
                            width: 24%
                        &.arquivo
                            width: 24%
                        &.loja
                            width: 12%
                        &.data
                            width: 20%

                        &.usuario
                            width: 15%
                        &.info
                            width: 40%

                        &.title
                            width: 50%
                    @media (min-width 991px)
                        b
                            display: none
                    @media (max-width 991px)
                        background: var(--bgInner)
                        border-radius: 5px
                    &:nth-child(2n + 1)
                        background: var(--bgInner)
                        border-radius: 5px
    &__header
        max-width: 705px
        width: 100%
        display: flex
        border-radius: 5px
        padding-bottom: 15px
        height: 44px
        position: relative
        margin-left: auto;
        select
            border 0
            border-right: 2px solid var(--bg)
            border-radius: 5px 0  0 5px
            background: var(--bgInner)
            color: var(--texto)
            padding: 15px 30px 15px 15px;
            font-size: 14px;
            letter-spacing: .2px;
            max-width: 218px
            width: 100%
            appearance: none
            background: var(--seta) right center no-repeat var(--bgInner);

        input
            border 0
            border-radius:  0 5px 5px 0 
            background: var(--bgInner)
            color: var(--texto)
            padding: 15px 30px 15px 15px;
            font-size: 14px;
            letter-spacing: .2px;
            width: 100%
        .buscar
            position: absolute
            height: 48px
            width: 48px
            top: 0
            right: 0
            background: transparent

            svg
                margin-top: 5px
                fill: var(--verde)
            


.acoes
    display: flex
    gap: 10px
    align-items: center
    .editar
        font-size: 14px
        letter-spacing: .2px
        color: var(--verde)
        text-decoration: underline
        background: transparent
        border 0
    .excluir
        background: transparent
        border 0