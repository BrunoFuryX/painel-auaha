.listagem
    padding: 25px 30px 30px
    &__container
        display: flex
        flex-direction: column
        gap: 20px
        padding: 25px 20px 17px
        border-radius: 10px
        background: var(--bgInner)
        box-shadow: 0 2px 10px #0002
    
    &__list
        &-header
            padding-top: 20px
            font-size: 18px;
            font-weight: 600;
            letter-spacing: .2px;
            line-height: 20px;
            color: var(--verde);
            text-align: center
            @media (min-width 991px)
                display: none
        &-body
            .topo
                display: flex
                justify-content: space-between

            .item
                display: flex
                justify-content: space-between 
    &__header
        max-width: 705px
        width: 100%
        display: flex
        border-radius: 5px
        height: 50px
        position: relative
        margin-left: auto;
        select
            border 0
            border-right: 2px solid var(--bg)
            border-radius: 5px 0  0 5px
            background: var(--bgInner)
            color: var(--texto)
            padding: 15px 30px 15px 15px;
            font-size: 14px;
            letter-spacing: .2px;
            max-width: 218px
            width: 100%
        input
            border 0
            border-radius:  0 5px 5px 0 
            background: var(--bgInner)
            color: var(--texto)
            padding: 15px 30px 15px 15px;
            font-size: 14px;
            letter-spacing: .2px;
            width: 100%
        .buscar
            position: absolute
            height: 48px
            width: 48px
            top: 0
            right: 0
            background: transparent

            svg
                margin-top: 5px
                fill: var(--verde)
            