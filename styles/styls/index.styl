.dashboard
    padding: 10px 30px
    &__list
        display: flex
        justify-content: flex-start;
        flex-wrap: wrap;
        gap: 20px
        @media (max-width 991px)
            justify-content: center



    &__item
        width: 32%
        min-width 300px
        margin-top: 15px
        border-radius: 10px
        box-shadow: var(--sombra)
        background: var(--bgInner)
        font-size: 14px

        @media (max-width 991px)
            width: 100%
        &-header
            padding: 20px 30px 12px
            border-bottom: 1px solid var(--bg)
            font-size: 16px
            font-weight: 600
            letter-spacing: .2px
            color: var(--verde)

        &-body
            color: var(--texto)
            padding: 5px 13px 0
            >div
                height: 44px
                width: 100%
                display: flex
                align-items: center
                padding: 15px
                box-sizing: border-box
                &:nth-child(2n)
                    border-radius: 5px
                    background: var(--bg)
        &-footer
            padding: 22px
            text-align: center
            a
                font-size: 14px
                font-weight: 500
                letter-spacing: .2px
                color: var(--texto)
                text-decoration: none
                transition: .3s
                &:hover
                    color: var(--verde)


