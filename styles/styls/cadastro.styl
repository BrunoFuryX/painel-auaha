.cadastro
    padding: 25px 30px 30px
    &__container
        display: flex
        flex-direction: column
        gap: 20px
        padding: 25px 20px 17px
        border-radius: 10px
        background: var(--bgInner)
        box-shadow: 0 2px 10px #0002
        &.lojas
            
            form
                display: grid
                grid-template-columns: repeat(5, 1fr) 160px;
                grid-template-rows: repeat(3, 50px);
                grid-column-gap: 20px;
                grid-row-gap: 20px;
                @media (max-width 991px)
                    display: flex
                    gap: 20px;
                    flex-direction: column;
                
                :nth-child(2)
                    grid-area: 1 / 1 / 2 / 2;
                :nth-child(3)
                    grid-area: 1 / 2 / 2 / 3;

                :nth-child(4)
                    grid-area: 1 / 3 / 2 / 4;

                :nth-child(5)
                    grid-area: 1 / 4 / 2 / 5;

                :nth-child(6)
                    grid-area: 1 / 5 / 2 / 6;

                :nth-child(7)
                    grid-area: 2 / 1 / 3 / 2;

                :nth-child(8)
                    grid-area: 2 / 2 / 3 / 3;

                :nth-child(9)
                    grid-area: 2 / 3 / 3 / 4;

                :nth-child(10)
                    grid-area: 3 / 1 / 4 / 2;

                :nth-child(11)
                    grid-area: 3 / 2 / 4 / 3;
                :nth-child(12)
                    grid-area: 3 / 3 / 4 / 4;
                button
                    grid-area: 1 / 6 / 4 / 7;
                    margin-top: auto;
            
            .checkbox-area
                grid-area: 2 / 4 / 4 / 6;
                display: flex
                flex-wrap: wrap
                justify-content: space-between
                align-items: center
                gap: 20px
                background: var(--bg)
                border-radius: 5px
                padding: 25px 50px
                width: 100%
                max-width: 1200px
                box-sizing: border-box;

                .checkbox
                    display: flex
                    gap: 5px
                    align-items: center
                    position relative
                    margin: 0
                    width: 47%;
                    &:hover 
                        input ~ .check 
                            background-color: #fff2;
                    input
                    label
                        cursor: pointer
                        &.text
                            font-size: 12px
                            letter-spacing: .2px
                            color: var(--texto)
                        &.check
                            display: block
                            height: 16px;
                            width: 16px;
                            background-color: transparent;
                            border 1px solid #707070
                            border-radius: 2px
                    input
                        position: absolute;
                        opacity: 0;
                        cursor: pointer;
                        height: 100%;
                        width: 100%;   
                        &:checked ~ .check
                            background-color: var(--verde);
        h3
            font-size: 18px
            font-weight: 600
            letter-spacing: .2px
            line-height: 20px
            color: var(--verde)

        form
            display: flex
            align-items: center
            gap 20px
            input
            select
                width: 100%
                color: var(--texto)
                background: var(--bg)
                height: 50px
                border-radius: 5px
                border 0
                padding:  15px
                font-size: 14px
                letter-spacing: .2px

            .file
                position: relative
                background: var(--bg)
                height: 50px
                border-radius: 5px
                border 0
                padding:  15px
                width: 100%
                box-sizing: border-box
                input
                    position: absolute
                    width: 100%
                    height: 100%
                    top: 0
                    opacity 0
                    cursor: pointer
                
                label
                    display: flex
                    gap: 10px
                    font-size: 14px
                    letter-spacing: .2px
                    color: var(--texto)
                    justify-content: center
                    cursor: pointer
                    align-items: center
                    svg
                        fill: var(--texto)
                    &.active
                        color: var(--verde)
                        svg
                            fill: var(--verde)
            button
                width: 100%
                max-width: 160px
                color: var(--textoInvertido)
                background: var(--verde)
                height: 50px
                border-radius: 5px
                border 0
                padding:  15px
                text-transform: uppercase
            

