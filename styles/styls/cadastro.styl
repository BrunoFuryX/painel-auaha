.cadastro
    padding: 25px 30px 30px
    &__container
        display: flex
        flex-direction: column
        gap: 20px
        padding: 25px 20px 17px
        border-radius: 10px
        background: var(--bgInner)
        box-shadow: 0 2px 10px #0002
        @media (max-width 991px)
            &.implode
                gap: 0
                form
                    height: 0
                    overflow: hidden
        &.editar
            box-shadow: 0 2px 10px var(--verde)
            border 1px solid var(--verde)
        &.tabela
            form
                display: grid
                grid-template-columns: repeat(3, 1fr) 160px;
                grid-template-rows: 50px 1fr;
                grid-column-gap: 20px;
                grid-row-gap: 20px;
                @media (max-width 991px)
                    display: flex
                    gap: 20px;
                    flex-direction: column;
                
                :nth-child(2)
                    grid-area: 1 / 1 / 2 / 2;
                :nth-child(3)
                    grid-area: 1 / 2 / 2 / 3;
                :nth-child(4)
                    grid-area: 1 / 3 / 2 / 4;
                :nth-child(5)
                    grid-area: 2 / 1 / 3 / 4;
                :nth-child(6)
                    grid-area: 1 / 4 / 3 / 5;
            .tabela-de-medidas
                display: flex
                flex-direction: column
                gap: 20px
                @media (max-width 991px)
                    overflow-x: scroll
                    max-width: 100%
                button
                    width: 40px
                    height: 40px
                    background: transparent
                    padding: 0
                    fill var(--verde)
                    stroke var(--verde)
                .row
                    display: flex
                    gap: 20px
                    input
                        flex 1 0 100px
                        max-width: 174px
        &.lojas
            form
                display: grid
                grid-template-columns: repeat(5, 1fr) 160px;
                grid-template-rows: repeat(3, 1fr);
                grid-column-gap: 20px;
                grid-row-gap: 20px;
                @media (max-width 991px)
                    display: flex
                    gap: 20px;
                    flex-direction: column;
                
                :nth-child(2)
                    grid-area: 1 / 1 / 2 / 2;
                :nth-child(3)
                    grid-area: 1 / 2 / 2 / 3;

                :nth-child(4)
                    grid-area: 1 / 3 / 2 / 4;

                :nth-child(5)
                    grid-area: 1 / 4 / 2 / 5;

                :nth-child(6)
                    grid-area: 1 / 5 / 2 / 6;

                :nth-child(7)
                    grid-area: 2 / 1 / 3 / 2;

                :nth-child(8)
                    grid-area: 2 / 2 / 3 / 3;

                :nth-child(9)
                    grid-area: 2 / 3 / 3 / 4;

                :nth-child(10)
                    grid-area: 3 / 1 / 4 / 2;

                :nth-child(11)
                    grid-area: 3 / 2 / 4 / 3;
                :nth-child(12)
                    grid-area: 3 / 3 / 4 / 4;
                button
                    grid-area: 1 / 6 / 4 / 7;
                    margin-top: auto;
            
            .checkbox-area
                grid-area: 2 / 4 / 4 / 6;
                display: flex
                flex-wrap: wrap
                justify-content: center
                align-items: center
                gap: 10px
                background: var(--bg)
                border-radius: 5px
                width: 100%
                max-width: 1200px
                box-sizing: border-box;
                padding: 15px 30px
            
                @media (max-width 1300px)
                    padding: 15px 10px
                > input
                    border: 1px solid var(--texto)
                .checkbox
                    display: flex
                    gap: 5px
                    align-items: center
                    position relative
                    margin: 0
                    @media (min-width 991px)
                        width: 47%;
                        overflow: hidden

                    &:hover 
                        input ~ .check 
                            background-color: #fff2;
                    input
                    label
                        cursor: pointer
                        &.text
                            font-size: 12px
                            letter-spacing: .2px
                            color: var(--texto)
                        &.check
                            display: block
                            height: 16px;
                            width: 16px;
                            background-color: transparent;
                            border 1px solid #707070
                            border-radius: 2px
                    input
                        position: absolute;
                        opacity: 0;
                        cursor: pointer;
                        height: 100%;
                        width: 100%;   
                        &:checked ~ .check
                            background-color: var(--verde);
        
        h3
            font-size: 18px
            font-weight: 600
            letter-spacing: .2px
            line-height: 20px
            color: var(--verde)
            display: flex
            align-items: center
            justify-content: space-between

        form
            display: flex
            align-items: center
            gap 20px
            @media (max-width 991px)
                display: flex
                gap: 20px;
                flex-direction: column;
            input
            select
                width: 100%
                color: var(--texto)
                background: var(--bg)
                
                height: 44px
                border-radius: 5px
                border 0
                padding:  15px
                font-size: 14px
                letter-spacing: .2px
                
            select
                appearance: none
                background: var(--seta) right center no-repeat var(--bg);
            .file
                position: relative
                background: var(--bg)
                height: 44px
                border-radius: 5px
                border 0
                padding: 0 15px
                display flex
                justify-content: center
                align-items: center
                width: 100%
                box-sizing: border-box
                
                input
                    position: absolute
                    width: 100%
                    height: 100%
                    top: 0
                    opacity 0
                    cursor: pointer
                
                label
                    display: flex
                    gap: 10px
                    font-size: 14px
                    letter-spacing: .2px
                    color: var(--texto)
                    justify-content: center
                    cursor: pointer
                    align-items: center
                    svg
                        fill: var(--texto)
                    &.active
                        color: var(--verde)
                        svg
                            fill: var(--verde)
            button
                width: 100%
                max-width: 160px
                color: var(--textoInvertido)
                background: var(--verde)
                height: 44px
                border-radius: 5px
                border 0
                font-size: 14px
                padding:  15px
                text-transform: uppercase
            

