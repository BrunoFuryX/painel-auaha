.cadastro
    padding: 25px 30px 30px
    &__container
        display: flex
        flex-direction: column
        gap: 20px
        padding: 25px 20px 17px
        border-radius: 10px
        background: var(--bgInner)
        box-shadow: 0 2px 10px #0002
        h3
            font-size: 18px
            font-weight: 600
            letter-spacing: .2px
            line-height: 20px
            color: var(--verde)

        form
            display: flex
            justify-content: space-between
            align-items: center
            gap 20px
            input
            select
                width: 100%
                color: var(--texto)
                background: var(--bg)
                height: 50px
                border-radius: 5px
                border 0
                padding:  15px
                font-size: 14px
                letter-spacing: .2px

            button
                width: 100%
                max-width: 160px
                color: var(--textoInvertido)
                background: var(--verde)
                height: 50px
                border-radius: 5px
                border 0
                padding:  15px
                text-transform: uppercase
            